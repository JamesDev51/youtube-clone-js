extends ../layouts/join

block content
    .join__wrapper
        img(src=img.join class="joinLaptop")
        .join__select
            .join__select-title
                span 안녕하세요.
                span JamesTube 입니다.
            a(href=`join${routes.newJoin}`).join__newJoin 
                span 일반회원으로 가입하기
                i.fas.fa-chevron-right.joinArrowRight
            .join__social-dropdown
                button(href=`join${routes.socialJoin}` onclick="socialJoinDropdown()").join__social
                    span 소셜계정으로 가입하기
                    i.fas.fa-angle-down
                .join__social-content
                    .join__social-wrapper
                        a(href=routes.google)
                            i.fab.fa-google.google
                        a(href=routes.kakao)
                            i.fas.fa-comment.kakao
                        a(href=routes.naver)
                            span.naver N
                        a(href=routes.github)
                            i.fab.fa-github