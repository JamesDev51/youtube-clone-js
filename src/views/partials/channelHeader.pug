.channelHeader
    img.cnHeader__cover(src=channel.coverUrl)
    .cnHeader__wrapper
        .cnHeader__info
            .info__column
                .user__avatar(style=`background-color:${userColor};`)
                    if channel.avatarUrl
                        img(src=channel.avatarUrl class="header__userAvatar-img")
                    else
                        span(class="header__userAvatar-name") #{user.name.substr(0,1)}
                .cnHeader__detail    
                    .cnHeader__cnName=channel.name
                    .info__column-cnSubscribers
                        div.cnHedaer__cnSubscribers-title 구독자
                        div.cnHeader__cnSubscribers-number=channel.subscribers
                        div.cnHedaer__cnSubscribers-person 명
            .info__column
                .cnHeader__subscribeBtn.subscribeBtn 구독
                
