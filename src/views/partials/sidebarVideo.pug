include ../mixins/subscriptionList

.sidebar#sidebarVideo
    if !user
        .sidebar__wrapper-big#videoSidebarWrapper
            .sidebar__header
                .sidebar__button
                    button(onclick="sidebarVideoBtn()")
                        i.fas.fa-bars
                .sidebar__jamesTube-logo
                    a(href=routes.home)
                        span.jamesTube-logo
                            i.fab.fa-youtube
                        span.jamesTube-Title JamesTube
                        span.jamesTube-language KR
            .sidebar__element
                ul.feed-list
                    li.home
                        a(href=routes.home class="home-container")
                            i.fas.fa-home
                            |홈
                    li.trending
                        a(href=`${domain}/feed/trending` class="trending-container")  
                            i.fas.fa-fire
                            |인기
                    li.subscriptions
                        a(href=`${domain}/feed/subscriptions` class="subscriptions-container")
                            i.fas.fa-archive 
                            |구독
                    li.library
                        a(href=`${domain}/feed/library` class="library-container")
                            i.fas.fa-box
                            |보관함
            .sidebar__element.sidebar__login
                span.sidebar__login-title 로그인하면 동영상에 좋아요<br>를 표시하고 댓글을 달거나<br>구독할 수 있습니다.
                a(href=routes.login, class="login-btn")
                    i.fas.fa-user-circle.login-btn__icon
                    span.login-btn__title 로그인
    else
        .sidebar__wrapper-big#videoSidebarWrapper
            .sidebar__header
                .sidebar__button
                    button(onclick="sidebarVideoBtn()")
                        i.fas.fa-bars
                .sidebar__jamesTube-logo
                    a(href=routes.home)
                        span.jamesTube-logo
                            i.fab.fa-youtube
                        span.jamesTube-Title JamesTube
                        span.jamesTube-language KR
            .sidebar__element
                ul.feed-list
                    li.home
                        a(href=routes.home class="home-container")
                            i.fas.fa-home
                            |홈
                    li.trending
                        a(href=`${domain}/feed/trending` class="trending-container")  
                            i.fas.fa-fire
                            |인기
                    li.subscriptions
                        a(href=`${domain}/feed/subscriptions` class="subscriptions-container")
                            i.fas.fa-archive 
                            |구독
                    li.library
                        a(href=`${domain}/feed/library` class="library-container")
                            i.fas.fa-box
                            |보관함
            .sidebar__element
                ul.playlist-list
                    li.myvideos
                        a(href=`${domain}/feed/my_videos` class="subscriptions-container")
                            i.fas.fa-film
                            |내 동영상
                    li.watchlist
                        a(href=`${domain}/playlist/WL` class="subscriptions-container")
                            i.fas.fa-clock
                            |나중에 볼 동영상
                    li.likelist
                        a(href=`${domain}/playlist/LL` class="subscriptions-container")
                            i.fas.fa-thumbs-up
                            |좋아요 표시한 동영상
            .sidebar__element
                ul.subscriptions-list
                    each channel in channels
                        +subscriptionList({
                            channelId:channel.id,
                            channelName : channel.name,
                        })





            